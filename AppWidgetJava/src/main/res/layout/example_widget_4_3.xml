<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_card_widget_app"
    android:backgroundTint="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlviewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivPoolDashBoard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_widgets_24" />
        <LinearLayout
            android:id="@+id/llPoint1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/llPoint2"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_ll_stroke_black_corner8"
            android:paddingVertical="3dp"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_app_registration_24" />

            <TextView
                android:id="@+id/tvTotalApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="1000"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llPoint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="3dp"
            android:layout_centerVertical="true"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_ll_stroke_black_corner8"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/tvTitleTotalPoint"
                android:layout_width="wrap_content"
                android:src="@drawable/baseline_stars_24"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvTotalPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="100"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:scrollbars="horizontal"
        android:id="@+id/llListApp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlviewTop"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivApp1"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp1"
                android:layout_toRightOf="@id/ivApp1"
                android:layout_width="15dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:id="@+id/tvNumberItemApp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="1"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivApp2"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp2"
                android:layout_toRightOf="@id/ivApp2"
                android:layout_width="15dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp2"
                    android:text="2"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivApp3"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp3"
                android:layout_toRightOf="@id/ivApp3"
                android:layout_width="15dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp3"
                    android:text="3"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivApp4"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp4"
                android:layout_toRightOf="@id/ivApp4"
                android:layout_width="15dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp4"
                    android:text="4"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivApp5"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp5"
                android:layout_toRightOf="@id/ivApp5"
                android:layout_width="15dp"
                android:gravity="center"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp10"
                    android:text="4"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:scrollbars="horizontal"
        android:id="@+id/llListApp2"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llListApp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivApp6"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp6"
                android:layout_toRightOf="@id/ivApp6"
                android:layout_width="15dp"
                android:gravity="center"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:id="@+id/tvNumberItemApp6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="1"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivApp7"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp7"
                android:layout_toRightOf="@id/ivApp7"
                android:layout_width="15dp"
                android:gravity="center"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp7"
                    android:text="2"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivApp8"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp8"
                android:layout_toRightOf="@id/ivApp8"
                android:layout_width="15dp"
                android:gravity="center"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp8"
                    android:text="3"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivApp9"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp9"
                android:layout_toRightOf="@id/ivApp9"
                android:layout_width="15dp"
                android:gravity="center"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp9"
                    android:text="4"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivApp10"/>
            <LinearLayout
                android:id="@+id/llNumberItemApp10"
                android:layout_toRightOf="@id/ivApp10"
                android:layout_width="15dp"
                android:gravity="center"
                android:background="@drawable/bg_ll_stroke_black_corner8"
                android:layout_height="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/tvNumberItemApp5"
                    android:text="4"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlEarnPoint"
            android:layout_below="@+id/llListApp2"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_ll_stroke_black_corner8"
            android:layout_marginHorizontal="8dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEarnPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textSize="12sp"
                android:text="@string/earn_point_to_day"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp" />
            <LinearLayout
                android:id="@+id/llPoint3"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_stars_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:id="@+id/tvEarnPointDay"
                    android:layout_gravity="center"
                    android:text="1000"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="10dp" />
            </LinearLayout>
        </RelativeLayout>


    <ImageView
        android:id="@+id/ivChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_below="@+id/rlEarnPoint"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />
    <ListView
        android:id="@+id/lvInfoPoint"
        android:divider="@null"
        android:scrollbars="none"
        android:dividerHeight="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:listSelector="@android:color/transparent"
        android:layout_below="@+id/ivChart"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        tools:listitem="@layout/item_info_point_app"
        android:layout_height="wrap_content" />
</RelativeLayout>